{
  "name": "cms",
  "version": "0.0.0",
  "description": "CMS Backend",
  "author": "Waldemar Penner",
  "license": "MIT",
  "engines": {
    "node": "10.8.0"
  },
  "scripts": {
    "lint": "tslint -c ./tslint.json './src/**/*.ts' -e './src/typings/*.ts'",
    "format": "prettier --write \"**/*.ts\"",
    "build": "tsc",
    "start": "npm run start:prod",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "pretest": "prisma deploy -e test.env",
    "test": "NODE_ENV=test-all jest --coverage",
    "posttest": "prisma delete -e test.env -f",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest -i",
    "test:unit": "jest --config ./jest-unit.json",
    "pretest:integ": "prisma deploy -e test.env",
    "test:integ": "NODE_ENV=integration-test jest --config ./jest-integ.json",
    "test:integ:debug": "NODE_ENV=integration-test node --inspect-brk ./node_modules/.bin/jest -i --config ./jest-integ.json",
    "posttest:integ": "prisma delete -e test.env -f",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/graphql": "^3.0.0",
    "@nestjs/passport": "^1.1.0",
    "apollo-link-http": "^1.5.4",
    "apollo-server-express": "^1.3.6",
    "bcrypt": "^3.0.0",
    "dotenv": "^6.0.0",
    "fastify-formbody": "^2.0.1",
    "graphql": "^0.13.2",
    "graphql-request": "^1.8.1",
    "graphql-tools": "^3.1.1",
    "merge-graphql-schemas": "^1.5.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "prisma-binding": "^2.1.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "scuid": "^1.1.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/bcrypt": "^2.0.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/node": "^10.5.7",
    "@types/node-cache": "^4.1.1",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.4.2",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.0",
    "prisma": "^1.15.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "setupFiles": [
      "../testSetup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
